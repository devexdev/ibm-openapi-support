{
  "name": "ibm-openapi-support",
  "version": "0.0.2",
  "description": "utility for loading and parsing swagger",
  "author": {
    "name": "Neil Hardman",
    "email": "nhardman@uk.ibm.com"
  },
  "scripts": {
    "test": "npm run lint && npm run mocha",
    "lint": "eslint .",
    "mocha": "mocha 'test/unit/**/*.js'",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "mocha2": "standard --env mocha && mocha 'test/unit/**/*.js'",
    "coverage": "standard --env mocha && nyc mocha --grep @full --invert 'test/**/*.js'",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.ibm.com/arf/swaggerize.git"
  },
  "keywords": [
    "yeoman-generator",
    "swagger",
    "generator"
  ],
  "dependencies": {
    "debug": "^2.2.0",
    "js-yaml": "^3.4.2",
    "bluebird": "^3.5.0",
    "request": "^2.81.0",
    "swagger-parser": "^3.4.1",
    "swaggerize-routes": "^1.0.0"
  },
  "devDependencies": {
    "coveralls": "^2.13.1",
    "eslint": "^3.1.1",
    "eslint-plugin-ejs": "0.0.2",
    "codecov": "^2.1.0",
    "istanbul": "^0.4.5",
    "mem-fs": "^1.1.3",
    "mem-fs-editor": "^3.0.2",
    "mocha": "^3.2.0",
    "nock": "^9.0.13",
    "nyc": "^10.1.2",
    "standard": "^10.0.2",
    "standard-version": "^4.2.0",
    "yeoman-assert": "^3.0.0",
    "yeoman-test": "^1.6.0"
  },
  "standard": {
    "ignore": [
      "refresh/templates/common/swagger-ui/**/*"
    ]
  },
  "license": "Apache-2.0",
}
